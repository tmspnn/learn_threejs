{
    "version": "1.0.0",
    "name": "learn_threejs",
    "author": "Thomas Peng Li",
    "scripts": {
        "build": "NODE_ENV=production webpack",
        "dev": "webpack --watch"
    },
    "dependencies": {
        "lodash": "^4.17.21",
        "three": "^0.127.0"
